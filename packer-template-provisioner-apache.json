{
  "variables": {

  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-0080e4c5bc078760e",
      "instance_type": "t2.micro",
      "vpc_id": "vpc-05673efa44d239ff9",
      "subnet_id": "subnet-03854b5a5df09c8da",
      "ssh_username": "ec2-user",
      "ami_name": "apache-ami-packer-{{timestamp}}",
      "name": "apache-ami"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum install -y httpd",
        "sudo chkconfig httpd on",
        "sudo service httpd start",
        "sudo chown -R ec2-user:ec2-user /var/www/",
        "echo '<h1>Successfully provisioned Infra using Cloudformation, Jenkins and Packer.</h1>' > /var/www/html/index.html"
      ]
    }
  ]
}
